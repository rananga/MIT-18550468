@model StudentInformationSystem.Areas.Student.Models.StudentVM

@{
    ViewBag.Title = "Student Extra Activities";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.Id, "Base", "Data", "GetStudents", new { @class = "form-control" }, "Please select a Student", dspFormat: "{2}", hiddenIndices: "0")
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div class="ChildContent AcheivementContent">
    @{ Html.RenderAction("AcheivementIndex", new { id = Model.Id, isToEdit = false }); }
</div>

<div class="ChildContent PositionContent">
    @{ Html.RenderAction("PositionIndex", new { id = Model.Id, isToEdit = false }); }
</div>

@section Scripts {
    <script src="~/Scripts/Student/ExtraActivity.js"></script>
}