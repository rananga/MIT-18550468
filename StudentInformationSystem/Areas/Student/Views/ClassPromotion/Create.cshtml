@model StudentInformationSystem.Areas.Student.Models.StudentTransferVM

@{
    ViewBag.Title = "Create Student Transfer";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <p>
            <input type="submit" value="Save" class="btn btn-primary" style="min-width:75px" />
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StudentId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.StudentId, "Base", "Data", "GetStudents", new { @class = "form-control" }, "Please select a student", null, dspFormat: "{1} - {2}", hiddenIndices: "0")
                @Html.ValidationMessageFor(model => model.StudentId, "", new { id = "errStudentId", @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FromCR_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.FromCR_Id, "Base", "Data", "GetClassrooms", new { @class = "form-control", @readonly = "readonly" }, "Please select from classroom", null, dspFormat: "{2}", hiddenIndices: "0")
                @Html.ValidationMessageFor(model => model.FromCR_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToCR_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.ToCR_Id, "Base", "Data", "GetClassrooms", new { @class = "form-control" }, "Please select to classroom", null, dspFormat: "{2}", hiddenIndices: "0")
                @Html.ValidationMessageFor(model => model.ToCR_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.Reason, 3, 2, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Student/StudentTransfer.js")
}
