@{
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <style>
        html, body {
            background-image: url('@Url.Content("~/Content/Images/signin_banner.jpg")'); /*url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg');*/
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }

        .container {
            height: 100%;
            align-content: center;
        }

        .card {
            min-height: 275px;
            margin-top: auto;
            margin-bottom: auto;
            width: 400px;
            background-color: rgba(192,192,192,0.75) !important;
        }

        .social_icon span {
            font-size: 60px;
            margin-left: 10px;
            color: #FFC312;
        }

            .social_icon span:hover {
                color: white;
                cursor: pointer;
            }

        .card-header h3 {
            color: white;
        }

        .social_icon {
            position: absolute;
            right: 20px;
            top: -45px;
        }

        .input-group-prepend span {
            width: 50px;
            background-color: maroon;
            color: silver;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }

        .remember {
            color: white;
        }

            .remember input {
                width: 20px;
                height: 20px;
                margin-left: 15px;
                margin-right: 5px;
            }

        .login_btn {
            color: silver;
            background-color: maroon;
            width: 100px;
            font-weight:bold;
        }

            .login_btn:hover {
                color: maroon;
                background-color: white;
            }

        .links {
            color: white;
        }

            .links a {
                margin-left: 4px;
            }
    </style>

</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="card-header">
                        @*<img src="@Url.Content("~/Content/Images/login_header.png")" class="img-responsive" style="height:85px" />*@
                        <label style="padding:.45rem 0; color:maroon; font-weight:bold;">Student Information System</label>
                    </div>
                    <div class="card-body">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" id="UserName" name="UserName" class="form-control" placeholder="username">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" id="PassWord" name="PassWord" class="form-control" placeholder="password">
                        </div>
                    </div>
                    <div class="card-footer" style="padding-bottom: 0">
                        <div class="d-flex justify-content-center">
                            @{ Html.RenderPartial("~/Areas/Base/Views/Shared/_PartialAlert.cshtml"); }
                        </div>
                        <div class="form-group" style="margin-bottom: 0">
                            <label style="padding:.45rem 0; color:maroon; font-weight:bold;margin-bottom:0">School Moto</label>
                            <input type="submit" value="Login" class="btn float-right login_btn col-sm-4" style="margin-bottom:0">
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</body>
</html>