@model StudentInformationSystem.Areas.Admin.Models.PermissionVM

@{
    ViewBag.Title = "User Permission Details";
}

<div>
    <hr />
    @using (Html.BeginForm("Delete", "UserPermission"))
    {
        @Html.HiddenFor(model => model.PermissionId)
        @Html.HiddenFor(model => model.RowVersion)
        @Html.HiddenFor(model => model.MenusJson)
        @Html.AntiForgeryToken()
        <p>
            <div class="btn-toolbar">
                @Html.ActionLink("Edit", "Edit", new { id = Model.PermissionId }, new { @class = "btn btn-primary", style = "min-width:75px" })
                @Html.ConfirmSubmitButton("Delete", "Are you sure you want to delete?", "Confirm user permission deletion",
                 "<span class='glyphicon glyphicon-trash'></span> Delete", new { @class = "btn btn-danger", style = "min-width:75px" })
            </div>
        </p>
    }

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DetailsViewFor(model => model.Code)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DetailsViewFor(model => model.Name)
            </div>
        </div>
    </div>
</div>

<div class="ChildContent">
    @{ Html.RenderAction("ChildIndex", new { id = Model.PermissionId }); }
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/admin/userpermission")
}