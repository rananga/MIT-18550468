@model IEnumerable<StudentInformationSystem.Areas.Admin.Models.ExtraActivityInchargeVM>

<hr />
<h3>Masters In Charge</h3>

<table class="mGrid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MasterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            @{
                if (ViewBag.IsToEdit)
                {
                    <th class="btn-1">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus' style='color:white'></span>", "Add", "InChargeCreate", routeValues: new { activityId = ViewBag.ActivityId }, htmlAttributes: new { data_popup_editor = "", @class = "btn btn-primary pull-right btn-xs", data_title = "Add Activity Master In Charge" })
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MasterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            @{
                if (ViewBag.IsToEdit)
                {
                    <td class="btn-2">
                        <div class="btn-toolbar pull-right">
                            @using (Html.BeginForm("InChargeDelete", "ExtraActivity", new { id = item.Id }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil' style='color:black'></span>", "Edit", "InChargeEdit", routeValues: new { id = item.Id }, htmlAttributes: new { data_popup_editor = "", @class = "btn btn-warning btn-xs", data_title = "Edit Activity Master In Charge" })
                                @Html.ConfirmSubmitButton("<span class='glyphicon glyphicon-trash'></span>", "Are you sure you want to delete?", "Confirm activity master in charge deletion", "<span class='glyphicon glyphicon-trash'></span> Delete", new { data_popup_delete = "", @class = "btn btn-danger btn-xs" })
                            }
                        </div>
                    </td>
                }
            }
        </tr>
        }
    </tbody>
</table>

@if (ViewBag.IsToEdit)
{
    Html.RenderPartial("~/Areas/Base/Views/Shared/_PartialAlert.cshtml");
}


