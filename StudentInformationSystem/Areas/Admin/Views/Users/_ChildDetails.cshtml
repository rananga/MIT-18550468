@model StudentInformationSystem.Areas.Admin.Models.UserPermissionVM

@using (Html.BeginForm())
{
    <br />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.UserPermissionId)

        <div class="form-group">
            @Html.LabelFor(model => model.PermissionName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DetailsViewFor(model => model.PermissionName)
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}