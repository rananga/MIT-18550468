@using StudentInformationSystem.Data.Models;
@model StudentInformationSystem.Areas.Admin.Models.GradeVM

@{
    ViewBag.Title = "Grade Subject Information";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.SelectListFor(model => model.Id, (Grade x) => x.Id, (Grade x) => x.Section.Code + " - " + x.GradeNo.ToEnumChar(), new { @class = "form-control" }, (Grade x) => new { x.SectionId })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div class="ChildContent">
    @{ Html.RenderAction("SubjectIndex", new { id = Model.Id, isToEdit = false }); }
</div>

@section Scripts {
    <script src="~/Scripts/Academic/GradeSubject.js"></script>
}