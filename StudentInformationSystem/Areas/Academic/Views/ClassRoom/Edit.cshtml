@model StudentInformationSystem.Areas.Academic.Models.PhysicalClassRoomVM

@{
    ViewBag.Title = "Edit Class Information";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <p>
            <input type="submit" value="Save" class="btn btn-primary" style="min-width:75px" />
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Year)
        @Html.HiddenFor(model => model.GradeClassId)
        @Html.HiddenFor(model => model.RowVersion)

        <div class="form-group">
            @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DetailsViewFor(model => model.Year)
            </div>
            @Html.LabelFor(model => model.GradeClassDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DetailsViewFor(model => model.GradeClassDesc)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Medium, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EnumEditorFor(model => model.Medium, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Medium, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

<div class="ChildContent">
    @{ Html.RenderAction("TeacherIndex", new { id = Model.Id, isToEdit = true }); }
</div>

<div class="ChildContent">
    @{ Html.RenderAction("SubjectIndex", new { id = Model.Id, isToEdit = true }); }
</div>

<div class="ChildContent">
    @{ Html.RenderAction("MonitorIndex", new { id = Model.Id, isToEdit = true }); }
</div>

<div class="ChildContent">
    @{ Html.RenderAction("StudentIndex", new { id = Model.Id, isToEdit = false }); }
</div>

<br />

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
