@model SMS.Areas.Base.Models.ActingEmpVM
@{
    ViewBag.Title = "Change Acting DG";
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />

        <p>
            <input type="submit" value="Save" class="btn btn-primary" style="min-width:75px" />
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ActingID)


        <div class="form-group" >
            @Html.LabelFor(model => model.IsOff, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.IsOff, new { htmlAttributes = new { @class = "form-checkbox" } })
                @Html.ValidationMessageFor(model => model.IsOff, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" id="actemp">
            @Html.LabelFor(model => model.ActingEmpID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.PopUpSelectorFor(model => model.ActingEmpID, "Base", "Data", "GetEmployees", new { @class = "form-control" }, "Please select an Employee", new { Directors = true }, dspFormat: "{1}", hiddenIndices: "0,5")
                @Html.ValidationMessageFor(model => model.ActingEmpID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="datefrom">
            @Html.LabelFor(model => model.DateFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control", type = "JQ-date" } })
                @Html.ValidationMessageFor(model => model.DateFrom, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group" id="dateto">
            @Html.LabelFor(model => model.DateTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control", type = "JQ-date" } })
                @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
            </div>
        </div>


      </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/admin/actingemp")
}




