@model SMS.Areas.Student.Models.StudDonationsVM

@{
    ViewBag.Title = "Donation Invoice Details";
}

<div>
    <hr />
    @using (Html.BeginForm(null, ""))
    {
        @Html.HiddenFor(model => model.DonationID)
        @Html.HiddenFor(model => model.RowVersion)
        @Html.AntiForgeryToken()
        <p>
            <div class="btn-toolbar">
                @Html.ActionLink("Edit", "InvoiceEdit", new { id = Model.DonationID }, new { @class = "btn btn-primary", style = "min-width:75px" })
                @Html.ActionLink("Print Invoice", "PrintInvoice", "PaymentInvoice", new { id = Model.DonationID }, new { target = "_blank", @class = "btn btn-warning", style = "min-width:75px" })
            </div>
        </p>
    }

    <div class="form-horizontal">

        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.InvoiceNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DetailsViewFor(model => model.InvoiceNo)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DetailsViewFor(model => model.StudentName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DonationType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DetailsViewFor(model => model.DonationType)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DetailsViewFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DetailsViewFor(model => model.Amount)
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/student/reports")
    }


